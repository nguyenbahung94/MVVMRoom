<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar" />

    <LinearLayout
        android:id="@+id/llParent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background_login"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="vertical"
        android:paddingLeft="@dimen/activity_login_padding_24dp"
        android:paddingRight="@dimen/activity_login_padding_24dp"
        android:paddingTop="@dimen/activity_login_padding_80dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/activity_login_tv_height_72dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/activity_login_margin_24dp"
            android:gravity="center"
            android:text="@string/text_login"
            android:textColor="@color/color_tv_login"
            android:textSize="@dimen/tv_size_60sp" />

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/activity_login_height_45dp"
            android:layout_marginBottom="@dimen/activity_login_margin_8dp"
            android:layout_marginTop="@dimen/activity_login_margin_100dp"
            android:background="@color/white">

            <EditText
                android:id="@+id/edtEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:gravity="center"
                android:hint="@string/text_hint_email"
                android:inputType="textEmailAddress"
                android:textColor="@color/black"
                android:textColorHint="@color/color_tv_login"
                android:textSize="@dimen/tv_size_16sp" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/activity_login_height_45dp"
            android:layout_marginBottom="@dimen/activity_login_margin_8dp"
            android:layout_marginTop="@dimen/activity_login_margin_15dp"
            android:background="@color/white">

            <EditText
                android:id="@+id/edtPassWord"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:gravity="center"
                android:hint="@string/text_hint_password"
                android:inputType="textPassword"
                android:textColor="@color/black"
                android:textColorHint="@color/color_tv_login"
                android:textSize="@dimen/tv_size_16sp" />
        </android.support.design.widget.TextInputLayout>

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btnLogin"
            android:layout_width="match_parent"
            android:layout_height="@dimen/activity_login_height_45dp"
            android:layout_marginBottom="@dimen/activity_login_margin_24dp"
            android:layout_marginTop="@dimen/activity_login_margin_70dp"
            android:padding="@dimen/tv_size_12sp"
            android:text="@string/text_login"
            android:textColor="@color/color_tv_login"
            android:theme="@style/Widget.AppCompat.Button.Borderless" />
    </LinearLayout>
</LinearLayout>